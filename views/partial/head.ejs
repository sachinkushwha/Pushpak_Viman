<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Booking</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            padding-left: 200px; /* Sidebar ki jagah chhodne ke liye */
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 60px;
            height: 100%;
            background: white;
            padding-top: 20px;
            transition: transform 0.3s ease-in-out;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li {
            padding: 15px;
            margin-bottom: 100px;
            text-align: center;
        }

        .sidebar ul li a {
            text-decoration: none;
            color: white;
            font-size: 18px;
            display: block;
            transition: 0.3s;
        }

        .sidebar ul li a:hover {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 5px;
        }

        /* Toggle Button (Mobile) */
        .menu-btn {
            position: fixed;
            left: 10px;
            top: 10px;
            background: #007bff;
            color: white;
            border: none;
            padding: 10px;
            font-size: 18px;
            cursor: pointer;
            display: none; /* Desktop pe hidden */
        }

        /* Mobile Responsive */
        @media screen and (max-width: 768px) {
            body {
                padding-left: 0;
            }

            .sidebar {
                transform: translateX(-100%);
                width: 200px;
            }

            .menu-btn {
                display: block;
            }
        }

        .sidebar.open {
            transform: translateX(0);
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <ul>
            <li><a href="/">üöó</a></li>
            <li><a href="/home">üè†</a></li>
            <li><a href="/Contact-Us">üìû</a></li>
            <li><a href="/Add-Vehicle">‚ûï</a></li>
        </ul>
    </nav>

    <!-- Toggle Button -->
    <button class="menu-btn" id="menu-btn">‚ò∞</button>

    <script>
        const menuBtn = document.getElementById("menu-btn");
        const sidebar = document.getElementById("sidebar");

        menuBtn.addEventListener("click", () => {
            sidebar.classList.toggle("open");
        });
    </script>

</body>
</html>
