<%- include('../partial/head')%>
    <style>
        body {
            font-family: "Poppins", sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100vh;
            overflow-y: auto;
        }
        .hero {
            text-align: center;
            margin: 80px 0;
        }
        .hero h1 {
            color: #fff;
            font-size: 2.5rem;
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3);
        }
        .cards-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 25px;
            max-width: 90%;
        }
        .card {
            background: #ffffff;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
            max-width: 250px;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.5);
        }
        .card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 10px;
        }
        .card h3 {
            color: #ff5733;
            font-size: 22px;
            margin: 10px 0;
        }
        .card p {
            color: #333;
            font-size: 16px;
            margin: 5px 0;
        }
        .cta {
            text-align: center;
            margin-top: 40px;
            padding: 20px;
        }
        .cta h2 {
            color: #fff;
            font-size: 2rem;
        }
        .cta p {
            color: #fff;
            font-size: 1.2rem;
        }
        /* âœ… Button Styling */
        .card .buttons {
            margin-top: 10px;
        }
        .btn {
            display: inline-block;
            padding: 8px 12px;
            margin: 5px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
            font-weight: bold;
            transition: 0.3s ease;
            cursor: pointer;
        }
        .update-btn {
            background: #28a745;
            color: white;
        }
        .update-btn:hover {
            background: #218838;
        }
        .delete-btn {
            background: #dc3545;
            color: white;
        }
        .delete-btn:hover {
            background: #c82333;
        }
    </style>
</head>
<body>
    <section class="hero">
        <h1>Find Your Perfect Trip</h1>
    </section>
    <div class="cards-container">
        <% Vehicle_Added.forEach(vehicle => { %>
            <div class="card">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTm41vuD5MUhDo11rZrtpETBEqeEdEXppvJHQ&s" alt="Vehicle Image">
                <h3>ðŸš˜ Vehicle Details</h3>
                <p><strong>Type:</strong> <%= vehicle.Vahical %></p>
                <p><strong>Color:</strong> <%= vehicle.Color %></p>
                <p><strong>Rate/Day:</strong> â‚¹<%= vehicle.Rate %></p>

                <!-- âœ… Update & Delete Buttons -->
                <div class="buttons">
                    <a href="host-update/<%= vehicle.id %>?editing=true" class="btn update-btn">Update</a>
                    <a href="/delete/<%= vehicle.id %>" class="btn delete-btn" onclick="return confirm('Are you sure you want to delete this vehicle?')">Delete</a>
                </div>
            </div>
        <% }); %>
    </div>
    <section class="cta">
        <h2>Book Now and Save Big!</h2>
        <p>Exclusive deals on flights, hotels, and tours.</p>
    </section>
</body>
</html>
