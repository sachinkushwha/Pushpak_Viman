<%- include('partial/head')%>
    <style>
      body {
        font-family: "Poppins", sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #ff416c, #ff4b2b);
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 100vh;
        overflow-y: auto;
      }
      .hero {
        text-align: center;
        margin: 30px 0;
      }
      .hero h1 {
        color: #fff;
        font-size: 2.5rem;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3);
      }
      .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 25px;
        max-width: 90%;
      }
      .card {
        background: #fff;
        padding: 20px;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
        max-width: 350px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
        overflow: hidden;
      }
      .card:hover {
        transform: scale(1.07);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.5);
      }
      .card::before {
        content: "";
        position: absolute;
        top: -50px;
        left: -50px;
        width: 100px;
        height: 100px;
        background: rgba(255, 105, 97, 0.3);
        border-radius: 50%;
        transition: all 0.4s ease;
      }
      .card:hover::before {
        width: 250px;
        height: 250px;
      }
      .card h3 {
        color: #ff5733;
        font-size: 22px;
        margin-bottom: 10px;
      }
      .card p {
        color: #333;
        font-size: 16px;
        margin: 8px 0;
      }
      .cta {
        text-align: center;
        margin-top: 40px;
        padding: 20px;
      }
      .cta h2 {
        color: #fff;
        font-size: 2rem;
      }
      .cta p {
        color: #fff;
        font-size: 1.2rem;
      }
    </style>
  </head>
  <body>
    <section class="hero">
      <h1>Find Your Perfect Trip</h1>
    </section>
    <div class="cards-container">
      <% Vehicle_Added.forEach(vehicle => { %>
        <div class="card">
          <h3>ðŸš˜ Vehicle Details</h3>
          <p><strong>Type:</strong> <%= vehicle.vehicle_type %></p>
          <p><strong>Color:</strong> <%= vehicle.vehicle_color %></p>
          <p><strong>Number:</strong> <%= vehicle.vehicle_number %></p>
          <p><strong>Rate/Day:</strong> â‚¹<%= vehicle.rate_per_day %></p>
          <h3>ðŸ‘¤ Owner Details</h3>
          <p><strong>Name:</strong> <%= vehicle.owner_name %></p>
          <p><strong>Contact:</strong> <%= vehicle.owner_contact %></p>
          <p><strong>Address:</strong> <%= vehicle.owner_address %></p>
        </div>
      <% }); %>
    </div>
    <section class="cta">
      <h2>Book Now and Save Big!</h2>
      <p>Exclusive deals on flights, hotels, and tours.</p>
    </section>
  </body>
</html>
